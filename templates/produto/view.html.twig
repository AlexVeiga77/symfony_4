{% extends 'base.html.twig' %}

{% block title %}Visualização {% endblock %}

{% block body %}

    <h1>Visualizar produtos -

        <small>{{ produto.nome }}</small>
    </h1>

    <hr>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Cod.</th>
            <td>{{ produto.id }}</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>{{ produto.nome }}</td>
        </tr>
        <tr>
            <th>Preço</th>
            <td>R$ {{ produto.preco|number_format(2,",",".") }}</td>
        </tr>
        <tr>
            <th>Descrição</th>
            <td>{{ produto.descricao |nl2br }}</td>
        </tr>
        </tbody>
    </table>

    <hr>
    <button type="button" class="btn btn-primary" >voltar</button>

{% endblock %}